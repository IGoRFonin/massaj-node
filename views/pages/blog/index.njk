{% extends 'base.njk' %}

{% block content %}
	<div class="container">
		<div class="row">
	                <div class="col-md-12 blog-posts">
	    {% for post in posts %}
	        <div class="blog-post">
	            <h3 class="post-title">{{ post.name }}</h3>
	            <div class="blog-text">
	            	{{ post.body }}
	            </div>
		        <a href="{{ post.link }}" class="btn btn-color">Читать далее</a>		
	        </div>
		{% else %}
		  <div>This would display if the 'item' collection were empty</div>
		{% endfor %}

	        </div>
	    </div>
	</div>
{% endblock %}